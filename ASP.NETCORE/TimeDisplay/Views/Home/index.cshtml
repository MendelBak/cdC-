<title>Time Display App</title>
<body>
        <h1>The Current Time Is:</h1>

        <div>
                @{
                DateTime CurrentTime = DateTime.Now;
                string date = CurrentTime.ToString("MMMM dd, yyy");
                string time = CurrentTime.ToString("h:mm tt");
                }

                <h2>@date</h2>
                <h2>@time</h2>

        </div>

</body>